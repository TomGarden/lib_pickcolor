<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_init_color_ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/init_color_ffffffff"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_init_color_ff000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/init_color_ff000000"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_click_not_reset_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_not_reset_ui"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_recreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_not_reset_ui"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTest4Leak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test 4 memory leak"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnPrintViewTree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print view tree"
        android:textAllCaps="false" />


    <TextView
        android:id="@+id/tvLogCat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:selectableItemBackground"
        android:text="logcat" />

</LinearLayout>